<div class="panel panel-default workshop-panels<%= ' panel-primary' if event == @next_event %>">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= event.code %>"><%= event.code %>: <%= event.name %>
      <span class="event-date"><%= event.dates('long') %></span></a>
    </h4>
  </div>
  <div id="collapse<%= event.code %>" class="panel-collapse collapse<%= ' in' if event == @next_event %>">
    <div class="panel-body">
      <div class="row row-centered workshop-links">
        <div class="col-md-6 col-centered">
          <%= link_to '<i class="fa fa-calendar fa-fw"></i> Manage Schedule'.html_safe, event_schedule_index_path(event), :class => 'btn btn-default btn-block' %>
        </div>
        <!-- /.col-md-6 -->
        <div class="col-md-6 col-centered">
          <%= link_to '<i class="fa fa-users fa-fw"></i> View Members'.html_safe, event_memberships_path(event), :class => 'btn btn-default btn-block' %>
        </div>
        <!-- /.col-md-6 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.panel-body -->
  </div>
  <!-- /.panel-collapse -->
</div>
<!-- /.panel -->
<br />

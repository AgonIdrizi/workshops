<article>

<% if @memberships.blank? %>
  <div class="row">
      <div class="page-header">
        <h1>This event has no members.
        </h1>
      </div>
    </div>
<% else %>

  <!-- Membership Tables, one per type of attendance status -->
  <% @attendance.each do |status| %>
      <% if @event.has_attendance(status) && policy(@event).view_attendance_status?(status) %>
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-heading table-heading">
              <%= status %> Members
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-hover members-list container-fluid">
                  <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th class="hidden-xs">Affiliation</th>
                    <% if policy(@event).view_email_addresses? %>
                        <th class="hidden-md hidden-lg" align="middle">Email</th>
                        <th class="hidden-xs hidden-sm">E-mail</th>
                    <% end %>
                    <% if @pending_invites && policy(@event).show_invite_buttons? %>
                        <th class="invites"></th>
                    <% end %>
                    <th class="hidden-xs">Role</th>
                  </tr>
                  </thead>
                  <tbody>
                  <%= render partial: 'member_index_items', locals: {status: status } %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
              <% if status == 'Confirmed' && @member_emails %>
                <div id="email-members">
                <%= mail_to @current_user.email, "<i class=\"fa fa-envelope fa-fw\"></i> Email Confirmed Members".html_safe, bcc: @member_emails.join(','), subject: "[#{@event.code}] ", class: 'btn btn-sm btn-default email-members' %>
                 | <%= mail_to @organizer_emails.join(','), "<i class=\"fa fa-envelope fa-fw\"></i> Email Organizers".html_safe, subject: "[#{@event.code}] ", class: 'btn btn-sm btn-default email-members' %>
                </div>
              <% end %>
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
      <% end %>
  <% end %>

<% end %>


</article>
